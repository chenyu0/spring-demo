<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yolo.mapper.CenterSqlMapper">
  <resultMap id="BaseResultMap" type="com.yolo.entities.CenterSql">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="sql_code" jdbcType="VARCHAR" property="sqlCode" />
    <result column="sql_name" jdbcType="VARCHAR" property="sqlName" />
    <result column="template_id" jdbcType="VARCHAR" property="templateId" />
    <result column="sql_datasource" jdbcType="CHAR" property="sqlDatasource" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="create_user" jdbcType="VARCHAR" property="createUser" />
    <result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
    <result column="update_user" jdbcType="VARCHAR" property="updateUser" />
  </resultMap>
  <resultMap extends="BaseResultMap" id="ResultMapWithBLOBs" type="com.yolo.entities.CenterSql">
    <result column="sql_content" jdbcType="LONGVARCHAR" property="sqlContent" />
  </resultMap>
  <sql id="Example_Where_Clause">
    <where>
      <foreach collection="oredCriteria" item="criteria" separator="or">
        <if test="criteria.valid">
          <trim prefix="(" prefixOverrides="and" suffix=")">
            <foreach collection="criteria.criteria" item="criterion">
              <choose>
                <when test="criterion.noValue">
                  and ${criterion.condition}
                </when>
                <when test="criterion.singleValue">
                  and ${criterion.condition} #{criterion.value}
                </when>
                <when test="criterion.betweenValue">
                  and ${criterion.condition} #{criterion.value} and #{criterion.secondValue}
                </when>
                <when test="criterion.listValue">
                  and ${criterion.condition}
                  <foreach close=")" collection="criterion.value" item="listItem" open="(" separator=",">
                    #{listItem}
                  </foreach>
                </when>
              </choose>
            </foreach>
          </trim>
        </if>
      </foreach>
    </where>
  </sql>
  <sql id="Base_Column_List">
    id, sql_code, sql_name, template_id, sql_datasource, create_time, create_user, update_time, 
    update_user
  </sql>
  <sql id="Blob_Column_List">
    sql_content
  </sql>
  <select id="selectByExampleWithBLOBs" parameterType="com.yolo.entities.examples.CenterSqlExample" resultMap="ResultMapWithBLOBs">
    select
    <if test="distinct">
      distinct
    </if>
    'false' as QUERYID,
    <include refid="Base_Column_List" />
    ,
    <include refid="Blob_Column_List" />
    from center_sql
    <if test="_parameter != null">
      <include refid="Example_Where_Clause" />
    </if>
    <if test="orderByClause != null">
      order by ${orderByClause}
    </if>
  </select>
  <select id="selectByExample" parameterType="com.yolo.entities.examples.CenterSqlExample" resultMap="BaseResultMap">
    select
    <if test="distinct">
      distinct
    </if>
    'false' as QUERYID,
    <include refid="Base_Column_List" />
    from center_sql
    <if test="_parameter != null">
      <include refid="Example_Where_Clause" />
    </if>
    <if test="orderByClause != null">
      order by ${orderByClause}
    </if>
  </select>

    <select id="selectSQLByKey" resultType="com.yolo.entities.CenterSql">
        select a.* from center_sql a
        inner join center_template b on a.template_id = b.id
        inner join sys_center c on b.center_id = c.id
        where c.id = #{centerId}
        and b.template_index = #{templateIndex}
        and a.sql_code = #{sqlCode}
    </select>
</mapper>